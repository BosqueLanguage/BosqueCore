    field assembly: TreeIR::Assembly;
    field nemitter: NameEmitter;
    field temitter: TypeInfoEmitter;

    function processAssembly(asm: TreeIR::Assembly): TreeIR::Assembly {
        //TODO: ensure bodies are trees
