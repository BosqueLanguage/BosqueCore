namespace SMTEmitter;

const c_typeSig_None: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'None'<IR::TypeKey> };
const c_typeSig_Bool: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'Bool'<IR::TypeKey> };
const c_typeSig_Nat: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'Nat'<IR::TypeKey> };
const c_typeSig_Int: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'Int'<IR::TypeKey> };
const c_typeSig_BigNat: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'BigNat'<IR::TypeKey> };
const c_typeSig_BigInt: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'BigInt'<IR::TypeKey> };
const c_typeSig_Float: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'Float'<IR::TypeKey> };
const c_typeSig_CString: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'CString'<IR::TypeKey> };
const c_typeSig_String: TypeSignature = NominalTypeSignature{ IR::SourceInfo{0n, 0n, 0n, 0n}, 'String'<IR::TypeKey> };


const c_typeSig_NoneResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_None };
const c_typeSig_BoolResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_Bool };
const c_typeSig_NatResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_Nat };
const c_typeSig_IntResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_Int };
const c_typeSig_BigNatResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_BigNat };
const c_typeSig_BigIntResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_BigInt };
const c_typeSig_FloatResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_Float };
const c_typeSig_CStringResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_CString };
const c_typeSig_StringResult: ResultType = DirectResult{ SMTEmitter::c_typeSig_String };

chktest test_emitLiteralNoneValue(): Bool {
    let op = LiteralNoneValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_NoneResult, SMTEmitter::c_typeSig_None};
    return emitConstantValue(op) === 'none';
}

chktest test_emitLiteralBoolValue_true(): Bool {
    let op = LiteralSimpleValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_BoolResult, SMTEmitter::c_typeSig_Bool, 'true'};
    return emitConstantValue(op) === 'true';
}

chktest test_emitLiteralNatValue_42(): Bool {
    let op = LiteralSimpleValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_NatResult, SMTEmitter::c_typeSig_Nat, '42n'};
    return emitConstantValue(op) === '42';
}

chktest test_emitLiteralIntValue_neg42(): Bool {
    let op = LiteralSimpleValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_IntResult, SMTEmitter::c_typeSig_Int, '-42i'};
    return emitConstantValue(op) === '-42';
}

chktest test_emitLiteralBigNatValue_0(): Bool {
    let op = LiteralSimpleValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_BigNatResult, SMTEmitter::c_typeSig_BigNat, '0N'};
    return emitConstantValue(op) === '0';
}

chktest test_emitLiteralBigIntValue_pos1(): Bool {
    let op = LiteralSimpleValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_BigIntResult, SMTEmitter::c_typeSig_BigInt, '+1I'};
    return emitConstantValue(op) === '1';
}

chktest test_emitLiteralCStringValue_ok(): Bool {
    let op = LiteralCStringValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_CStringResult, SMTEmitter::c_typeSig_CString, 'ok'};
    return emitConstantValue(op) === '"ok"';
}

chktest test_emitLiteralStringValue_ok(): Bool {
    let op = LiteralStringValue{IR::SourceInfo{0n, 0n, 0n, 0n}, SMTEmitter::c_typeSig_StringResult, SMTEmitter::c_typeSig_String, 'ok'};
    return emitConstantValue(op) === '"ok"';
}

