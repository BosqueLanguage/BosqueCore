{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "bin",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/frontend/*.ts",
        "src/backend/*.ts",
        "src/cmd/*.ts",
        "test/parser/parse_nf.ts",
        "test/typecheck/typecheck_nf.ts",
        "test/runtime/runtime_nf.ts"
    ]
}
