{
    "compilerOptions": {
        "module": "Node16",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "bin"
    },
    "include": [
        "src/frontend/*.ts",
        "src/runtimes/javascript/*.ts",
        "src/runtimes/javascript/compiler/*.ts",
        "src/transformer/*.ts"
    ]
}
