{
    "compilerOptions": {
        "module": "commonjs",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "bin"
    },
    "include": [
        "frontend/*.ts", 
        "frontend/ast/*.ts", 
        "frontend/tree_ir/*.ts",
        "frontend/typechecker/*.ts",
        "runtimes/javascript/*.ts",
        "runtimes/javascript/compiler/*.ts"
    ]
}
